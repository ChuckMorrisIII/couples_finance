<div class="page-header">
  <h3>Tagging #<%= @tagging.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Tag</dt>
      <dd>
        <% if @tagging.tag.present? %>
          <a href="/tags/<%= @tagging.tag_id %>">
            <%= @tagging.tag.name %>
          </a>
        <% end %>
      </dd>

      <dt>Transaction</dt>
      <dd>
        <% if @tagging.tagged_transaction.present? %>
          <a href="/transactions/<%= @tagging.transaction_id %>">
            <%= @tagging.tagged_transaction.amount %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/taggings" class="btn btn-primary">
        Back
      </a>
      <a href="/taggings/<%= @tagging.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_tagging/<%= @tagging.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
