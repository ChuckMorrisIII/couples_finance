<div class="page-header">
  <h1>
    Transactions
    <a href="/transactions/new" class="btn btn-lg btn-success">New Transaction</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "transactions_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
  <%= f.label :amount, "Amount" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :amount_gteq, :class => "form-control", :placeholder => "Amount greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :amount_lteq, :class => "form-control", :placeholder => "Amount less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :tagging_id, "Tagging" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :tagging_id_gteq, :class => "form-control", :placeholder => "Tagging greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :tagging_id_lteq, :class => "form-control", :placeholder => "Tagging less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

<div class="form-group">
          <%= f.label :date, "Date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='dategteqPicker'>
                  <%= f.text_field :date_gteq, :class => "form-control", :placeholder => "Date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='datelteqPicker'>
                  <%= f.text_field :date_lteq, :class => "form-control", :placeholder => "Date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#dategteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#dategteqPicker').on("dp.change", function (e) {
                  $('#datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#datelteqPicker').on("dp.change", function (e) {
                  $('#dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
    <%= f.label :transaction_type_cont, "Transaction type contains" %>
    <%= f.text_field :transaction_type_cont, :class => "form-control", :placeholder => "Transaction type contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :created_at, "Tagging Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='taggingsgteqcreated_atPicker'>
                  <%= f.text_field :taggings_created_at_gteq, :class => "form-control", :placeholder => "Tagging Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='taggingslteqcreated_atPicker'>
                  <%= f.text_field :taggings_created_at_lteq, :class => "form-control", :placeholder => "Tagging Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#taggingsgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#taggingslteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#taggingsgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#taggingslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#taggingslteqcreated_atPicker').on("dp.change", function (e) {
                  $('#taggingsgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
      <%= f.label :account_name_cont, "Account name contains" %>
      <%= f.text_field :account_name_cont, :class => "form-control", :placeholder => "Account name contains" %>
    </div>

<div class="form-group">
      <%= f.label :category_name_cont, "Category name contains" %>
      <%= f.text_field :category_name_cont, :class => "form-control", :placeholder => "Category name contains" %>
    </div>

<div class="form-group">
      <%= f.label :tags_name_cont, "Tag name contains" %>
      <%= f.text_field :tags_name_cont, :class => "form-control", :placeholder => "Tag name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/transactions" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#transactions_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Amount</th>
        <th>Transaction type</th>
        <th>Category</th>
        <th>Date</th>
        <th>Description</th>
        <th>Account</th>
        <th>Tagging</th>
        <th>Actions</th>
      </tr>

      <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.amount %></td>
        <td><%= transaction.transaction_type %></td>
        <td>
          <% if transaction.category.present? %>
            <a href="/categories/<%= transaction.category.id %>">
              <%= transaction.category.name %>
            </a>
          <% end %>
        </td>
        <td><%= transaction.date %></td>
        <td><%= transaction.description %></td>
        <td>
          <% if transaction.account.present? %>
            <a href="/accounts/<%= transaction.account.id %>">
              <%= transaction.account.name %>
            </a>
          <% end %>
        </td>
        <td><%= transaction.tagging_id %></td>
        <td>
          <a href="/transactions/<%= transaction.id %>" class="btn btn-primary">Show</a>
          <a href="/transactions/<%= transaction.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_transaction/<%= transaction.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @transactions, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
